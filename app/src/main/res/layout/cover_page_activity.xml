<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/coverpic">



    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Add New Classes"
        android:id="@+id/add1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="VIEW EXISTING CLASSES"
        android:id="@+id/view1"
        android:layout_below="@+id/add1"
        android:layout_alignLeft="@+id/add1"
        android:layout_alignStart="@+id/add1"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Â©Avirup Debnath"
        android:textColor="@color/gray"
        android:id="@+id/copyright"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="S C H E D U L E R"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="30dp"
        android:height="50dp"
        android:id="@+id/appname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:id="@+id/frame"
        android:layout_alignRight="@+id/appname"
        android:layout_alignEnd="@+id/appname"
        android:layout_alignBottom="@+id/appname"
        android:layout_alignTop="@+id/appname" />

</RelativeLayout>